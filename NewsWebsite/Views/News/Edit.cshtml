@model NewsWebsite.ViewModels.News.EditNewsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit News</h4>

<hr />
<div class="row">
    <form asp-action="Edit" id="news-form">
        <div class="form-group">
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <partial name="_UpsertNews" model="@Model" />
    </form>
</div>

<script>WYSIWYGInstance.populateContainerWithWYSIWYGData(@Html.Raw(Model.Content));</script> <!--We need to populate the container with the hidden News Content value, in order to display it-->

